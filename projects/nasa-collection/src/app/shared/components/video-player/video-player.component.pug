.fade([class.show]="isOpen$ | async", (click)="onCloseVideo()")

.box([class.show]="isOpen$ | async")
  .title
    .text {{ (video$ | async)?.title | titlecase }}
    .close((click)="onCloseVideo()")

  video(autoplay, muted, controls, *ngIf="isOpen$ | async")
    source([src]="(video$ | async).source")
